<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sanaebelhaj.thetvbd">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo_launcher_round"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity android:name=".Controller.LoginActivity" android:configChanges="locale">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Controller.UpdatedSeriesActivity" android:configChanges="locale"/>
        <activity android:name=".Controller.SearchActivity" android:configChanges="locale"/>
        <activity android:name=".Controller.SerieActivity" android:configChanges="locale"/>
        <activity android:name=".Controller.AccountActivity" android:configChanges="locale"/>
    </application>


</manifest>